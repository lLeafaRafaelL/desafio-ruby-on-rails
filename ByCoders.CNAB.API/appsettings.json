{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=cnab_db;Username=cnab_user;Password=cnab_pass123"
  },
  "FileStorage": {
    "StoragePath": "/app/storage"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
